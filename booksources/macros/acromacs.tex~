\usepackage{acronym}
\newwrite\acrowrite
\openout\acrowrite=acronyms.tex
\def\acroitem#1#2{\acrodef{#1}{#2}
    \write\acrowrite{\message{defining #1}\noexpand\acitem{#1}{#2}}
}
