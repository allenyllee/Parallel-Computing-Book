// findbarrier.c
MPI_Request final_barrier;
MPI_Ibarrier(comm,&final_barrier);

int global_finish=mysleep;
do {
  int all_done_flag=0;
  MPI_Test(&final_barrier,&all_done_flag,MPI_STATUS_IGNORE);
  if (all_done_flag) {
    break;
  } else {
    printf("[%d] going to work for another second\n",procid);
    sleep(1);
    global_finish++;
  }
} while (1);
